<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_light_green_500</item>
        <item name="colorPrimaryDark">@color/md_light_green_700</item>
        <item name="colorAccent">@color/md_light_green_500</item>
        <item name="android:textColorSecondary">@color/md_text</item>
        <item name="colorControlHighlight">@color/md_indigo_500</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Detail">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBar.Detail</item>
    </style>

    <style name="ActionBar.Detail" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@null</item>
    </style>
</resources>
